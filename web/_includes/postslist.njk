    <a href="{{ post.url | url }}" class="postlist-link">{% if currentPost.title %}{{ currentPost.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
      
      <time class="postlist-date" datetime="{{ currentPost.publishedAt }}">{{ currentPost.publishedAt|readableDate }}</time>
      
      <br>
      <img src="{{ currentPost.mainImageURL }}" alt="{{ currentPost.mainImage.alt }}"/></br>
      <p>{{ currentPost.mainImage.caption }}</p>
    </a>
    -->
  </li>
  <br>
{% endfor %}
</ol>
